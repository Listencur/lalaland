---
import Comment from '../components/Comment.astro';
import Link from '../components/Link.astro';
import FriendCard from '../components/friend/FriendCard.astro';
import { friends } from '../content/config';
import Layout from '../layouts/Layout.astro';
import { randomSortArray } from '../utils/randomSortArray';
---

<Layout title="Friends">
  <div class="mb-4 text-sm dark:text-white">
    <span
      class="text-xs font-bold text-white dark:text-black bg-black dark:bg-white pl-[3px] mr-2"
    >
      BABABABABANANA
    </span>
    <span>Some of my projects</span>
    <!-- <Link
      href="https://github.com/jsun969/jsundotlol/blob/main/src/content/_friends.json"
    >
    </Link> -->
    <!-- <span>or leave a comment below!</span> -->
  </div>
  <div class="grid sm:grid-cols-3 gap-4 sm:gap-2">
    {randomSortArray(friends).map((friend) => <FriendCard friend={friend} />)}
  </div>
  <!-- <Comment /> -->
</Layout>
